# å¤„ç†ç¼–è¾‘è¡¨å•æäº¤
def handle_form_submit():
    """å¤„ç†è¡¨å•æäº¤ï¼šæ›´æ–°å­¦ç”Ÿå§“åå’Œå­¦å·"""
    if 'new_name' in st.session_state and 'new_id' in st.session_state:
        st.session_state.student_name = st.session_state.new_name  # æ›´æ–°å§“å
        st.session_state.student_id = st.session_state.new_id      # æ›´æ–°å­¦å·
    st.session_state.show_edit_form = False  # éšè—è¡¨å•
    st.rerun()  # åˆ·æ–°é¡µé¢

def toggle_edit_form():
    """åˆ‡æ¢ç¼–è¾‘è¡¨å•çš„æ˜¾ç¤ºçŠ¶æ€"""
    st.session_state.show_edit_form = not st.session_state.show_edit_form
    st.rerun()

def cancel_edit():
    """å–æ¶ˆç¼–è¾‘ï¼šéšè—è¡¨å•è€Œä¸ä¿å­˜æ›´æ”¹"""
    st.session_state.show_edit_form = False
    st.rerun()

# ä¸»æ ‡é¢˜å¡ç‰‡æ 
# æ˜¾ç¤ºå­¦ç”Ÿå§“åå’Œå­¦å·çš„è“è‰²å¡ç‰‡
